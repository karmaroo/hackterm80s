FROM node:18-alpine

# Install build tools for better-sqlite3
RUN apk add --no-cache python3 make g++

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install --omit=dev

# Copy source code
COPY . .

# Create db directory for SQLite
RUN mkdir -p /app/db

EXPOSE 3000

CMD ["node", "index.js"]
